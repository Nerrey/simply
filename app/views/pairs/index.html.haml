- model_class = Pair
.page-header
  %h1
    Словарь
%br
= link_to "Добавить", new_pair_path, :class => 'btn btn-primary'
%br
%br
%table.table.table-striped
  %thead
    %tr
      %th
        №
      %th
        Слово
      %th
        Перевод 1
      %th
        Перевод 2
      %th
        Перевод 3
      %th
        Перевод 4
      %th
        Часть речи
      %th
        Учебник
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @pairs.each_with_index do |pair, i|
      %tr
        %td= i+1
        %td= pair.word
        %td= pair.translate1
        %td= pair.translate2
        %td= pair.translate3
        %td= pair.translate4
        %td
          - pair.word_classes.each do |wc|
            = wc.name
            %br
        %td
          - pair.books.each do |book|
            =book.name
            %br
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_pair_path(pair), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), pair_path(pair), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

