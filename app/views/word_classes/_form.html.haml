.container
  = simple_form_for @word_class, :html => { :class => 'form-horizontal' } do |f|
    .row
      .col-md-6
        = f.input :name, label: "Название"
    .row
      .col-md-6
        = f.button :submit, "Сохранить", :class => 'btn-primary'
        = link_to "Отмена", word_classes_path, :class => 'btn btn-default'
