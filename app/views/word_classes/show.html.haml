- model_class = WordClass
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @word_class.name


= link_to t('.back', :default => t("helpers.links.back")), word_classes_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_word_class_path(@word_class), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), word_class_path(@word_class), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
